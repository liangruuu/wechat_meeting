/* pages/order/order.wxss */
@import "/component/order-item-template/order-item-template.wxss";

.lists-date {
  color: rgb(100, 100, 100);
  height: 80rpx;
  line-height: 80rpx;
  padding-left: 20rpx;
  border-bottom: 1rpx solid rgb(168, 166, 166);
}

.swiper-tab {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  width: 100%;
  border-bottom: 2rpx solid #d0d0d0;
  background-color: rgb(243, 243, 243);
  z-index: 999;
  text-align: center;
  line-height: 80rpx;
}

.swiper-tab-list {
  font-size: 30rpx;
  display: inline-block;
  width: 50%;
  color: #272727;
}

.on {
  color: #00a0e8;
  border-bottom: 5rpx solid #00a0e8;
}

.swiper-box {
  display: block;
  width: 100%;
  overflow: hidden;
  margin-top: 100rpx;

}

.orders-container {
  position: relative;
}