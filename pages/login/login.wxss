/* pages/login/login.wxss */

.login-container {
  display: flex;
  flex-flow: column;
}

.background {
  position: relative;
  width: 100%;
  height: 400rpx;
}

.background image {
  width: 100%;
  height: 100%;
}

.background .text {
  position: absolute;
  top: 40%;
  left: 15%;
  color: red;
  font-size: 60rpx;
  font-weight: bold;
}

.view-item {
  position: relative;
  height: 100rpx;
  margin: 10rpx 0 10rpx 0;
}

.view-name {
  position: absolute;
  top: 25%;
  left: 10%;
  width: 30%;
}

.input {
  position: absolute;
  top: 20%;
  left: 20%;
  width: 40%;
  margin-left: 100rpx;
  border-bottom: 1rpx solid black;
}

.view-item:nth-child(2) {
  margin-top: 80rpx;
}

.qrcode {
  position: absolute;
  top: 10%;
  right: 40rpx;
  width: 80rpx;
  height: 80%;
}

.loginBtn{
  width: 70%;
  margin: 30rpx auto;
}